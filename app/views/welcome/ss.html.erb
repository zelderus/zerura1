<% provide(:title, 'SQL tests') %>
<%= javascript_include_tag "lib/zerura", "data-turbolinks-track" => false %>

<script type="text/javascript">
    $(function () {
		// init
		zerura.Init({
			inited: true
		});
		// init map and go
		opts = 
			{
				gkey: "",
				gdebug: false,
				protocol: "http",
				glibraries: "places"
			};
		zedk.map.Init(opts, "zerura.MapGo");


    });
</script>


<div style="border-bottom: 1px solid #333;">
	data from PostgreSQL by raw request
</div>



<div style="margin: 5px; border-bottom: 1px dotted #666;">
	<% @records.each do |rec| %>
		<div style="padding: 4px; color: #666;">
			<%= rec['Title'] %>
		</div>
	<% end %>
</div>


<div style="margin: 5px; border-bottom: 1px dotted #666;">
	<% @records2.each do |rec| %>
		<div style="padding: 4px; color: #666;">
			<%= rec['Text'] %>
		</div>
	<% end %>
</div>


