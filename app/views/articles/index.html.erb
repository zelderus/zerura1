<% provide(:title, 'Articles..')%>
<h1>Articles</h1>
<%= link_to 'Home', root_path %>
<%= link_to 'New', controller: 'articles', action: 'new' %>

<div>
	<table>
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th colspan="2">Text</th>
			</tr>
		</thead>
		<tbody>
			<% @articles.each do |article| %>
				<tr>
					<td><%= article.id %></td>
					<td><%= link_to article.title, controller: 'articles', action: 'show', id: article.id %></td>
					<td><%= article.text %></td>
					<td><%= link_to 'Edit', controller: 'articles', action: 'edit', id: article.id %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

</div>

